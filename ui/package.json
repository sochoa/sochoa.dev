{
  "name": "sochoa.dev-ui",
  "version": "1.0.0",
  "description": "React + TypeScript + TailwindCSS UI for sochoa.dev",
  "type": "module",
  "scripts": {
    "api:generate": "npx @openapitools/openapi-generator-cli generate",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "npm run verify:all && npm run build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src",
    "verify:all": "npm run type-check && npm run lint",
    "verify:imports": "bash scripts/verify-imports.sh"
  },
  "dependencies": {
    "@aws-amplify/auth": "^6.2.0",
    "@aws-amplify/core": "^6.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.3",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.11.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.2"
  }
}
