# Database Configuration
# PostgreSQL connection string in format: postgres://user:password@localhost:5432/dbname
DB_DSN=postgres://user:password@localhost:5432/sochoa_dev

# AWS Configuration
AWS_REGION=us-east-1

# Cognito Configuration
# User Pool ID from AWS Cognito console (format: us-east-1_xxxxxxxxxxxx)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXXXXXXXXX

# Cognito App Client ID
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Logging Configuration
# Valid values: debug, info, warn, error
LOG_LEVEL=info

# Local Development Mode
# NEVER set this to true in production!
# When enabled: bypasses Cognito JWT verification and injects a mock user
# Default: false (disabled)
DEV_MODE=false

# Mock User Role (only used when DEV_MODE=true)
# Valid values: user, admin
# Default: user
DEV_USER_ROLE=user
